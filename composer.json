{
  "name": "nhagemann/anycontent-php",
  "description": "Client library to work with AnyContent repositories. Provides connectors for different repository types (file based, MySQL, restlike).",
  "type": "library",
  "homepage": "http://www.nilshagemann.de",
  "license": "MIT",
  "authors": [
    {
      "name": "Nils Hagemann",
      "email": "mail@nilshagemann.de",
      "homepage": "http://www.nilshagemann.de"
    }
  ],
  "require": {
    "php": ">=8.0",
    "nhagemann/cmdl-parser-php": "dev-analyze-for-robert",
    "psr/log": "1.*",
    "symfony/filesystem": "^6.2",
    "symfony/finder": "^6.2",
    "guzzlehttp/guzzle": "^7.5",
    "doctrine/cache": "^2.2",
    "nhagemann/kvmlogger": "^1.0",
    "imagine/imagine": "^1.3",
    "symfony/cache": "^6.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^1.9",
    "phpmd/phpmd": "^2.13",
    "aws/aws-sdk-php": "~2.8",
    "dflydev/apache-mime-types": "~1.0",
    "slevomat/coding-standard": "^8.7",
    "ext-pdo": "*"
  },
  "scripts": {
    "phpunit" : "vendor/bin/phpunit",
    "phpcs": "vendor/bin/phpcs",
    "phpcbf": "vendor/bin/phpcbf",
    "phpstan1": "vendor/bin/phpstan --memory-limit=-1 analyze --level 1 src tests",
    "phpstan2": "vendor/bin/phpstan --memory-limit=-1 analyze --level 2 src tests",
    "phpstan3": "vendor/bin/phpstan --memory-limit=-1 analyze --level 3 src tests",
    "phpstan4": "vendor/bin/phpstan --memory-limit=-1 analyze --level 4 src tests",
    "phpstan5": "vendor/bin/phpstan --memory-limit=-1 analyze --level 5 src tests",
    "phpstan": "vendor/bin/phpstan --memory-limit=-1 analyze --level max src tests",
    "phpmd": "vendor/bin/phpmd src ansi phpmd.xml"
  },
  "autoload": {
    "psr-0": {
      "AnyContent": "src/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/nhagemann/cmdl-parser-php"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
